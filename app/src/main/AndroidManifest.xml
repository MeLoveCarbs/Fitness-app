<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firstdraft">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.changepasswordActivity"></activity>
        <activity android:name=".Activities.weightandcalorietrackerActivity" />
        <activity android:name=".Activities.NewpostActivity" />
        <activity
            android:name=".Activities.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.MyFeedActivity_linker">
        </activity>
        <activity
            android:name=".Activities.DisplayPage"
            android:parentActivityName=".Activities.mainmenuactivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.mainmenuactivity" />
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".Activities.mainmenuactivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.mainmenuactivity" />
        </activity>
        <activity android:name=".Activities.newuseractivity" />
        <activity android:name=".Activities.mainmenuactivity" />
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MyRoutineActivity" />
    </application>

</manifest>